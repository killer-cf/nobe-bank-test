<h1 class='text-2xl font-bold'>Editar Conta</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'flex flex-col w-[400px]' }) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:name).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :cpf_number %>
    <%= f.text_field :cpf_number %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:cpf_number).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:email).first if resource.errors.any? %></p>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <div>
    <%= f.label :password %> <span>(deixe branco se n√£o quer mudar)</span>
    </div>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> minimo de caracteres</em>
    <% end %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:password).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:password_confirmation).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:current_password).first if resource.errors.any? %></p>
  </div>

  <div class="actions">
    <%= f.submit t("save"), class: 'btn-primary' %>
  </div>
<% end %>

<h3 class='text-xl font-bold'>Encerramento</h3>

<%= button_to "Encerrar minha conta", close_account_path(resource_name), class: 'font-semibold text-blue-800' %>

<%= link_to "Back", :back %>
