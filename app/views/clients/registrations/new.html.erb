<h1 class='text-2xl font-bold'>Criar Conta</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: {class: 'flex flex-col w-[400px]'}) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:name).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :cpf_number %>
    <%= f.text_field :cpf_number %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:cpf_number).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:email).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <div>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:password).first if resource.errors.any? %></p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <p class=' text-red-600'><%= resource.errors.full_messages_for(:password_confirmation).first if resource.errors.any? %></p>
  </div>

  <div class="actions">
    <%= f.submit t("sign up"), class: 'btn-primary' %>
  </div>
<% end %>

<%= render "clients/shared/links" %>
