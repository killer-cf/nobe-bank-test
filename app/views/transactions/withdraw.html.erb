<section>
  <div>
    <%= form_with url: send_withdraw_path, method: :patch, html: {class: 'flex flex-col w-[400px]'} do |form| %>
      <h1 class='text-2xl font-bold text-center'>Saque</h1>
      <h2 class='text-lg font-semibold text-center'>Selecione o valor para saque</h2>
      <%= form.label :value, 'Valor' %>
      <%= form.number_field :value %>

      <%= form.submit "CONFIRMAR", class: 'btn-primary' %>
    <% end %>
  </div>
</section>