<!DOCTYPE html>
<html>
  <head>
    <title>NobeBank</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <nav>
        <div>
          <%= current_client.name if current_client%>
        </div>
        <% if current_client %>
          <div>
            <h3>Saldo: R$ <%= number_with_precision(current_client.cash, precision: 2)%></h3>
          </div>
          <div>
            <%= button_to 'Encerrar sessÃ£o', destroy_client_session_path, method: 'delete' %>
          </div>
          <div>
            <%= link_to 'Editar dados da conta', edit_client_registration_path %>
          </div>
        <% else %>
          <div>
            <%= link_to 'Entrar', new_client_session_path %>
          </div>
          <div>
            <%= link_to 'Criar conta', new_client_registration_path %>
          </div>
        <% end %>
      </nav>
    </header>
    <main>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    </main>
  </body>
</html>
